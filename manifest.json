{
  "name": "Chatwork Tools",
  "description": "Insert tags or emojis from click each icon. Insert To tag with @ operation.",
  "version": "1.5.3",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://www.chatwork.com/", "https://kcw.kddi.ne.jp/"],
      "js": ["/js/insert_tag.js", "/js/insert_to.js", "/js/copy_link.js"]
    }
  ],
  "background": {
    "service_worker": "/js/background.js",
    "type": "module"
  },
  "options_ui": {
    "page": "/setting/options.html",
    "browser_style": false
  },
  "permissions": ["storage", "clipboardWrite"],
  "icons": {
    "128": "icon128.png"
  }
}
